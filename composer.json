{
    "name": "thruster/http-router",
    "type": "library",
    "description": "Thruster HttpRouter Component (PSR-7 and FastRoute based router)",
    "keywords": ["http-router", "httprouter", "http", "router", "thruster", "psr-7", "fastroute", "fast-route"],
    "homepage": "https://thruster.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Aurimas Niekis",
            "email": "aurimas@niekis.lt"
        }
    ],
    "require": {
        "php": ">=7.0",
        "nikic/fast-route": ">=0.7.0,<1.0.0",
        "psr/http-message": "~1.0",
        "thruster/promise": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": { "Thruster\\Component\\HttpRouter\\": "src" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit -c phpunit.xml.ci"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
